fastlane_version "1.32.3"

default_platform :ios


platform :ios do


  # Versioning **************

  desc "Create a new version"
  lane :version do |options|
    ensure_git_status_clean
    ensure_git_branch(branch: 'master')
    test
    
    version = version_bump_podspec(path: "VandelayQr.podspec", version_number: options[:name])
    increment_build_number(build_number: version)

    git_commit(
      path: [
        "VandelayQr.podspec",
        "Fastlane/"],
      message: "Bump to #{version}"
    )

    add_git_tag(tag: version)
    push_git_tags()
    push_to_git_remote()
    pod_push()
  end


  # Unit Tests ********

  desc "Run unit tests"
  lane :test do
    scan(
      scheme: "VandelayQr",
      project: "VandelayQr.xcodeproj"
    )    
  end
  
end
